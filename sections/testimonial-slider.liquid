{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .testimonial-slider__item {
    background: rgba(var(--color-background), 1);
    border-radius: 0.8rem;
    padding: 2.4rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .testimonial-slider__content {
    flex: 1;
    margin-bottom: 1.6rem;
  }

  .testimonial-slider__text {
    font-size: 1.6rem;
    line-height: 1.6;
    color: rgba(var(--color-foreground), 0.8);
    margin-bottom: 1.6rem;
  }

  .testimonial-slider__author {
    display: flex;
    align-items: center;
    gap: 1.2rem;
  }

  .testimonial-slider__author-image {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    object-fit: cover;
  }

  .testimonial-slider__author-info {
    flex: 1;
  }

  .testimonial-slider__author-name {
    font-weight: 600;
    font-size: 1.4rem;
    margin-bottom: 0.4rem;
  }

  .testimonial-slider__author-title {
    font-size: 1.2rem;
    color: rgba(var(--color-foreground), 0.6);
  }

  .testimonial-slider__rating {
    display: flex;
    gap: 0.4rem;
    margin-bottom: 1.6rem;
  }

  .testimonial-slider__star {
    width: 1.6rem;
    height: 1.6rem;
    fill: #ffc107;
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = 1
  assign show_mobile_slider = false
  if section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and section.blocks.size > section.settings.columns_desktop
    assign show_desktop_slider = true
  endif
-%}

<div class="color-{{ section.settings.color_scheme }} gradient{% if section.settings.custom_css_class != blank %} {{ section.settings.custom_css_class }}{% endif %}">
  <div class="page-width section-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    {%- if section.blocks.size > 0 -%}
      <slider-component class="slider-mobile-gutter">
        <ul
          class="testimonial-slider grid grid--1-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop{% if show_mobile_slider %} slider slider--tablet grid--peek{% endif %}{% if show_desktop_slider %} slider slider--desktop{% endif %}"
          id="Slider-{{ section.id }}"
          role="list"
        >
          {%- for block in section.blocks -%}
            <li
              id="Slide-{{ section.id }}-{{ forloop.index }}"
              class="testimonial-slider__item grid__item{% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}"
              {{ block.shopify_attributes }}
            >
              <div class="testimonial-slider__content">
                {%- if block.settings.rating > 0 -%}
                  <div class="testimonial-slider__rating" aria-label="Rating: {{ block.settings.rating }} out of 5">
                    {%- for i in (1..5) -%}
                      <svg class="testimonial-slider__star" viewBox="0 0 24 24" {% if i > block.settings.rating %}style="opacity: 0.3;"{% endif %}>
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    {%- endfor -%}
                  </div>
                {%- endif -%}

                {%- if block.settings.testimonial != blank -%}
                  <div class="testimonial-slider__text">
                    {{ block.settings.testimonial }}
                  </div>
                {%- endif -%}
              </div>

              <div class="testimonial-slider__author">
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 100
                    | image_tag: loading: 'lazy', class: 'testimonial-slider__author-image', alt: block.settings.name
                  }}
                {%- endif -%}
                <div class="testimonial-slider__author-info">
                  {%- if block.settings.name != blank -%}
                    <div class="testimonial-slider__author-name">
                      {{ block.settings.name }}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.title != blank -%}
                    <div class="testimonial-slider__author-title">
                      {{ block.settings.title }}
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </li>
          {%- endfor -%}
        </ul>

        {%- if show_mobile_slider or show_desktop_slider -%}
          <div class="slider-buttons{% unless show_desktop_slider %} large-up-hide{% endunless %}">
            <button
              type="button"
              class="slider-button slider-button--prev"
              name="previous"
              aria-label="{{ 'general.slider.previous_slide' | t }}"
            >
              <span class="svg-wrapper">{{ 'icon-caret.svg' | inline_asset_content }}</span>
            </button>
            <div class="slider-counter caption">
              <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
              <span class="slider-counter--total">{{ section.blocks.size }}</span>
            </div>
            <button
              type="button"
              class="slider-button slider-button--next"
              name="next"
              aria-label="{{ 'general.slider.next_slide' | t }}"
            >
              <span class="svg-wrapper">{{ 'icon-caret.svg' | inline_asset_content }}</span>
            </button>
          </div>
        {%- endif -%}
      </slider-component>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Testimonial Slider",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "What Our Customers Say",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra Large"
        },
        {
          "value": "hxxl",
          "label": "Extra Extra Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "enable_desktop_slider",
      "default": false,
      "label": "Enable slider on desktop",
      "info": "When enabled, testimonials will scroll as a slider on desktop when there are more items than columns"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "custom_css_class",
      "label": "Custom CSS class",
      "info": "Add a custom CSS class to this section for additional styling"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "richtext",
          "id": "testimonial",
          "default": "<p>This is an amazing product! I highly recommend it to everyone.</p>",
          "label": "Testimonial"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 0,
          "max": 5,
          "step": 1,
          "default": 5,
          "label": "Rating (0-5 stars)"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer image"
        },
        {
          "type": "text",
          "id": "name",
          "default": "John Doe",
          "label": "Customer name"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Verified Customer",
          "label": "Customer title/position"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial Slider",
      "blocks": [
        {
          "type": "testimonial",
          "settings": {
            "testimonial": "<p>This product exceeded my expectations! The quality is outstanding and the customer service was excellent.</p>",
